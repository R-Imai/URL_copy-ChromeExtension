{
  "name": "URL nonEncode copy",
  "description": "URLをエンコードせずにコピーします。",
  "version": "0.1.0",
  "content_scripts": [{
    "js": ["js/copyUrl.js"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "URL copy",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2
}
